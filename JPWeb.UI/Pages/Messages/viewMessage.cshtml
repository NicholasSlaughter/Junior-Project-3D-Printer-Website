@page
@model JPWeb.UI.Pages.Messages.viewMessageModel
@{
    ViewData["Title"] = "viewMessages";
}

<br />
<br />
<br />
<h2>Messages</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.msgs[0].sender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.msgs[0].body)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.msgs[0].timeSent)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody id="table">
        @foreach (var item in Model.msgs)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.sender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.body)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.timeSent)
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">     
                <input asp-for="newMsg.body" class="form-control" />
                <span asp-validation-for="newMsg.body" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>