@using Microsoft.AspNetCore.Identity
@using JPWeb.UI.Data.Model
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a class="hoverable_button" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Manage Account</a>
            </li>

            <li><a class="hoverable_button" href="javascript:document.getElementById('logoutForm').submit()">Log Out</a></li>

        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a class="hoverable_button" asp-area="Identity" asp-page="/Account/Register">Register</a></li>
        <li><a class="hoverable_button" asp-area="Identity" asp-page="/Account/Login">Login</a></li>
    </ul>
}