@page
@model JPWeb.UI.Pages.UserManagement.Index
@{
    ViewData["Title"] = "User Management";
}


<h2>User Management</h2>
<hr />

<div class="text-danger" asp-validation-summary="ModelOnly"></div>
@if (Model.EditMessage != null)
{
    <p><h3 style="color: Red">@Model.EditMessage</h3></p>
}
<table class="table ">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th></th>
        </tr>
    </thead>
    @if (@Model.Users.Count == 0)
    {
        <tr>
            <td colspan="3" class="text-center">
                No User Accounts
            </td>
        </tr>
    }
    else
    {
        foreach (var user in @Model.Users)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.First_Name @user.Last_Name</td>
                <td>@user.Email</td>
                <td>
                    <a class="btn btn-success" asp-page="./Edit" asp-route-id="@user.UserName">Modify User Permissions</a>
                </td>
            </tr>
        }
    }
</table>